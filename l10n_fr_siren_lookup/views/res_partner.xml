<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Client Form View -->
        <record id="partner_form_siren_view" model="ir.ui.view">
            <field name="name">res.partner.siren.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml" >
                <!-- ADD HEADER BUTTON -->
                <xpath expr="//sheet" position="before">
                    <header>
                        <button string="Get/Update SIRET and address" type="action" name="%(l10n_fr_siren_lookup.siren_wizard_action)d" context="{'default_partner_id': active_id, 'default_name': name}" attrs="{'invisible': [('is_company','!=',True)]}"/>
                    </header>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
